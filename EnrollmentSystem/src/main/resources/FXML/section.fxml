<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="442.0" prefWidth="801.0" stylesheets="@../CSS/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Classes.Section">


    <children>
        <!-- TableView with row click event -->
        <TableView fx:id="tableView" layoutX="372.0" layoutY="77.0" onMouseClicked="#handleRowClick" prefHeight="320.0" prefWidth="366.0">
            <columns>
                <TableColumn fx:id="colSection" prefWidth="194.0" text="Section" />
                <TableColumn fx:id="colDepartment" prefWidth="170.0" text="Department" />
            </columns>
        </TableView>

        <!-- Text Field for Section -->
        <TextField fx:id="secname" layoutX="51.0" layoutY="136.0" prefHeight="35.0" prefWidth="310.0" promptText="Section" />

        <!-- Buttons -->
        <Button fx:id="Add" layoutX="51.0" layoutY="224.0" mnemonicParsing="false" onAction="#addSection" prefHeight="36.0" prefWidth="104.0" text="Add">
         <graphic>
            <ImageView fitHeight="26.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/icons8-add-48.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="11.0" />
         </font></Button>

        <Button fx:id="Update" layoutX="163.0" layoutY="224.0" mnemonicParsing="false" onAction="#updateSection" prefHeight="36.0" prefWidth="95.0" text="Update">
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/icons8-update-64.png" />
               </image>
            </ImageView>
         </graphic></Button>

        <Button fx:id="Delete" layoutX="266.0" layoutY="224.0" mnemonicParsing="false" onAction="#deleteSection" prefHeight="36.0" prefWidth="95.0" text="Delete">
         <graphic>
            <ImageView fitHeight="21.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/icons8-delete-48 (green).png" />
               </image>
            </ImageView>
         </graphic></Button>


        <!-- ComboBox for Department -->
        <ComboBox fx:id="depcombo" layoutX="51.0" layoutY="177.0" prefHeight="35.0" prefWidth="310.0" promptText="Department" />
    </children>
</AnchorPane>
