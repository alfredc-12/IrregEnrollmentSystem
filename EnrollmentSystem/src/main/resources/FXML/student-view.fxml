<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="450.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Classes.StudentController">
   <top>
      <AnchorPane fx:id="rightpane" prefHeight="450.0" prefWidth="750.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="insertButton" layoutX="24.0" layoutY="264.0" prefHeight="30.0" prefWidth="92.0" text="INSERT">
               <graphic>
                  <ImageView fitHeight="17.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/icons8-add-48.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="clearButton" layoutX="454.0" layoutY="266.0" prefHeight="26.0" prefWidth="68.0" text="CLEAR" />

            <TextField fx:id="studID" editable="false" layoutX="113.0" layoutY="14.0" promptText="Student ID" />
            <TextField fx:id="firstName" layoutX="113.0" layoutY="58.0" />
            <TextField fx:id="middleName" layoutX="115.0" layoutY="110.0" />
            <TextField fx:id="lastName" layoutX="115.0" layoutY="160.0" />
            <TextField fx:id="srCode" layoutX="353.0" layoutY="58.0" />
            <TextField fx:id="contact" layoutX="353.0" layoutY="110.0" />
            <TextField fx:id="address" layoutX="353.0" layoutY="160.0" />
            <TextField fx:id="email" layoutX="113.0" layoutY="215.0" />
            <TextField fx:id="password" layoutX="353.0" layoutY="215.0" />

            <ComboBox fx:id="yearLevel" accessibleText="adsf" layoutX="577.0" layoutY="58.0" prefWidth="150.0" />
            <ComboBox fx:id="program" layoutX="577.0" layoutY="107.0" prefWidth="150.0" />
            <ComboBox fx:id="major" layoutX="577.0" layoutY="160.0" prefWidth="150.0" />
            <ComboBox fx:id="status" layoutX="577.0" layoutY="215.0" prefWidth="150.0" />
            <Label layoutX="21.0" layoutY="62.0" text="First Name" />
            <Label layoutX="17.0" layoutY="114.0" text="Middle Name" />
            <Label layoutX="22.0" layoutY="164.0" text="Last Name" />
            <Label layoutX="513.0" layoutY="62.0" text="Year Level" />
            <Label layoutX="516.0" layoutY="114.0" text="Program" />
            <Label layoutX="523.0" layoutY="164.0" text="Major" />
            <Label layoutX="523.0" layoutY="219.0" text="Status" />
            <Label layoutX="276.0" layoutY="62.0" text="SR-Code" />
            <Label layoutX="276.0" layoutY="114.0" text="Contact" />
            <Label layoutX="276.0" layoutY="164.0" text="Address" />
            <Label layoutX="24.0" layoutY="216.0" text="Email" />
            <Label layoutX="274.0" layoutY="219.0" text="Password" />
            <Button fx:id="Delete" layoutX="160.0" layoutY="264.0" mnemonicParsing="false" onAction="#deleteStudent" prefHeight="29.0" prefWidth="95.0" text="DELETE">
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/icons8-delete-48 (green).png" />
                     </image>
                  </ImageView>
               </graphic></Button>

            <Button fx:id="Update" layoutX="310.0" layoutY="265.0" mnemonicParsing="false" onAction="#updateStudent" prefHeight="28.0" prefWidth="99.0" text="UPDATE">
               <graphic>
                  <ImageView fitHeight="18.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/icons8-update-64.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <TextField fx:id="searchField" layoutX="577.0" layoutY="266.0" promptText="FILTER" />

            <TableView fx:id="studentTable" layoutX="24.0" layoutY="308.0" prefHeight="119.0" prefWidth="388.0">
               <columns>
                  <TableColumn fx:id="studIDColumn" text="Student ID" />
                  <TableColumn fx:id="firstNameColumn" text="First Name" />
                  <TableColumn fx:id="middleNameColumn" text="Middle Name" />
                  <TableColumn fx:id="lastNameColumn" text="Last Name" />
                  <TableColumn fx:id="srCodeColumn" text="SR Code" />
                  <TableColumn fx:id="yearLevelColumn" text="Year Level" />
                  <TableColumn fx:id="programColumn" text="Program" />
                  <TableColumn fx:id="majorColumn" text="Major" />
                  <TableColumn fx:id="contactColumn" text="Contact" />
                  <TableColumn fx:id="emailColumn" text="Email" />
                  <TableColumn fx:id="addressColumn" text="Address" />
                  <TableColumn fx:id="statusColumn" text="Status" />
                  <TableColumn fx:id="picLinkColumn" text="Picture" />
                  <TableColumn fx:id="passwordColumn" text="Password" />
               </columns>
            </TableView>
            <Pane fx:id="imagePanel" layoutX="448.0" layoutY="307.0" prefHeight="89.0" prefWidth="110.0" style="-fx-background-color: white;" />
            <Pane fx:id="signaturePanel" layoutX="594.0" layoutY="308.0" prefHeight="95.0" prefWidth="116.0" style="-fx-background-color: white;" />
            <Button fx:id="picture" layoutX="454.0" layoutY="406.0" mnemonicParsing="false" onAction="#openPictureDialog" prefHeight="18.0" prefWidth="98.0" text="Take Picture">
               <font>
                  <Font size="10.0" />
               </font></Button>
            <Button fx:id="picture1" layoutX="614.0" layoutY="406.0" mnemonicParsing="false" onAction="#openSignatureDialog" prefHeight="15.0" prefWidth="90.0" text="Take Signature">
               <font>
                  <Font size="10.0" />
               </font></Button>

         </children>
      </AnchorPane>
   </top>
</BorderPane>
